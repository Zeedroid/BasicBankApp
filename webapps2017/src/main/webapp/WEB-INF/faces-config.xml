<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>user</from-outcome>
            <to-view-id>/users/user.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/user.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/user.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>payDirect</from-outcome>
            <to-view-id>/users/payDirect.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/user.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>payRequest</from-outcome>
            <to-view-id>/users/payRequest.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/user.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>outRequest</from-outcome>
            <to-view-id>/users/outRequest.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/user.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>viewTrans</from-outcome>
            <to-view-id>/users/viewTrans.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>     
    <navigation-rule>
        <from-view-id>/users/payDirect.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>payDirect</from-outcome>
            <to-view-id>/users/payDirect.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/payDirect.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>userError</from-outcome>
            <to-view-id>/users/payDirectError.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>  
    <navigation-rule>
        <from-view-id>/users/payDirect.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>balanceError</from-outcome>
            <to-view-id>/users/payDirectError.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 

       <navigation-rule>
        <from-view-id>/users/payDirect.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>userIndex</from-outcome>
            <to-view-id>/users/user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/payRequest.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>payRequest</from-outcome>
            <to-view-id>/users/payRequest.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    <navigation-rule>
        <from-view-id>/users/payRequest.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>userError</from-outcome>
            <to-view-id>/users/payRequestError.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    <navigation-rule>
        <from-view-id>/users/payRequestError.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>payRequest</from-outcome>
            <to-view-id>/users/payRequest.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    <navigation-rule>
        <from-view-id>/users/acceptRequest.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>acceptRequest</from-outcome>
            <to-view-id>/users/acceptRequest.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>                 
        <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin/admin.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/admin.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/userAccounts.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin/admin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/userTrans.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin/admin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
